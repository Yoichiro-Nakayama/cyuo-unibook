  <div class="top_header">
  <div class="container">
      <div class="row">
          <div class="col-md-4 col-md-offset-7">
              <div class="panel panel-default">
                  <div class="panel-heading">
                    ユーザー情報</div>
                      <div class="panel-body">

                      <%= form_for current_user do |f| %>

                        <h2>登録情報</h2>
                          <div class="form-group">
                            <div class="col-lg-12">
                             <p>プロフィール画像</p>
                                <div class="form-group file">
                                  <%= f.file_field :avatar, class: "form-control floating-label", placeholder: "画像アップロード" %>
                                </div> 
                              </div>

                      <div class="col-lg-12">
                        <p>ニックネーム</p>
                           <%= f.text_field :nickname,  class: "form-control" %>
                      </div>

                           <div class="col-lg-12">
                             <p>学部</p>
                               <%= f.text_field :major,  class: "form-control" %>
                          </div>



                            <div class="col-lg-12">
                              <p>自己紹介</p>
                               <%= f.text_field :introduce,  class: "form-control" %>
                           </div>

                            <%= f.submit "更新する", class: "btn btn-primary withripple maipe-ji" %>
                          </div>


                       <% end %>
                      <!-- <div class="actions">
                         <button type="button" class="btn btn-primary"><%= link_to "更新する", edit_user_path(current_user) %></button>

                      </div> -->
                      </div>


                      <div class="panel-footer">
                      </div>
              </div>
          </div>
      </div>
  </div>

  </div>


