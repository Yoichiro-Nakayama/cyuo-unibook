<div class="center-block">
  <div class="top_header_show">

    <div class="container">
      <div class="row" >
        <div class=".col-xs-6 .col-xs-offset-2">
          <div class="thumbnail">
            <%= image_tag  @product.image_url %>
            <div class="caption">
              <h3>大学名:<%= @product.univercity %></h3>

              <h3>教科書名 : <%= @product.text_name %></h3>
              <h3>教授名 : <%= @product.professor %></h3>
              <h3>価格　: <%= @product.price %></h3>
              <h3>商品詳細 : <%= @product.detail %></h3>
              <h3>学部名 : <%= @product.faculty %></h3>
              <h3>配送負担 : <%= @product.sent_price %></h3>
              <h3>配送方法 : <%= @product.sent_method %></h3>

              <h2><%= link_to "出品者情報はこちら！", user_path(@product.user) %></h2>
              <%= link_to "購入する",  new_product_chat_path(@product.id) , class: "btn btn-primary", role: "button"%>
            </div> 
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
</div>
</div>


