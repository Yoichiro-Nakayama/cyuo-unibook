

<div class="top_header">
  <div class="container">
      <div class="row">
         <div class="col-lg-6 col-md-offset-6">

              <div class="panel panel-default">



              <% @products.each do |product|%>
               <div class="row">
                <div class="col-sm-6 col-md-4">
                  <div class="thumbnail">
                   <%= image_tag  product.image_url %>
                    <div class="caption">
                      <h3><%= product.text_name %></h3>
                      <p><%= product.price %>円</p>
                      <p><a href="#" class="btn btn-primary" role="button">詳細を見る</a>
                    </div>
                  </div>
                </div>
                </div>
              <% end %>




              </div>
          </div>
      </div>
  </div>

</div>

