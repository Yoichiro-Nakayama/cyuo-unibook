  <div class="top_header">
  <div class="container">
      <div class="row">
          <div class="col-md-4 col-md-offset-7">
              <div class="panel panel-default">
                  <div class="panel-heading">
                    ユーザー情報</div>
                      <div class="panel-body">

                      <%= form_for @product  do |f| %>
                        <h2>商品の説明</h2>
                          <div class="form-group">
                            <div class="col-lg-12">
                             <p>教科書画像</p>
                                <div class="form-group file">
                                  <%= f.file_field :image_url, class: "form-control floating-label", placeholder: "画像アップロード" %>
                                </div>
                            </div>

                            <div class="col-lg-12">
                              <p>値段</p>
                              <%= f.text_field :price, placeholder: "値段", class: "form-control" %>
                            </div>

                            <div class="col-lg-12">
                              <p>大学名</p>
                              <%= f.text_field :univercity, placeholder: "大学名", class: "form-control" %>
                            </div>

                            <div class="col-lg-12">
                              <p>教科書名</p>
                              <%= f.text_field :text_name, placeholder: "教科書名", class: "form-control" %>
                            </div>




                            <div class="col-lg-12">
                              <p>詳細</p>
                              <%= f.text_field :detail, placeholder: "商品詳細", class: "form-control" %>
                            </div>

                            <div class="col-lg-12">
                              <p>教授名</p>
                              <%= f.text_field :professor, placeholder: "教授名", class: "form-control" %>
                            </div>

                             <div class="col-lg-12">
                                <p>学部</p>
                                <%= f.select :faculty , [['法学部','法学部'],['商学部','商学部'],['経済学部','経済学部'],['文学部','文学部'],['総合政策学部','総合政策学部'],['理工学部','理工学部']] %>
                             </div>

                             <div class="col-lg-12">
                               <p>送料負担</p>
                               <%= f.select :sent_price , [['販売者負担','販売者負担'],['買い手負担','買い手負担'],['大学で手渡し0円','大学で手渡し0円']] %>
                             </div>

                             <div class="col-lg-12">
                               <p>配送方法</p>
                               <%= f.select :sent_method , [['大学で手渡し0円','大学で手渡し0円'],['配送(約200~300円,定形外郵便物,ゆうパック等)','配送(約200~300円,定形外郵便物,ゆうパック等)'],['配送(約300~500円,レターパック,ヤマト運輸等)','配送(約300~500円,レターパック,ヤマト運輸等']] %>
                             </div>


                               <%= f.submit "更新する", class: "btn btn-primary withripple maipe-ji" %>
                          </div>


                    <% end %>


                      <!-- <div class="actions">
                         <button type="button" class="btn btn-primary"><%= link_to "更新する", edit_user_path(current_user) %></button>

                      </div> -->

                      </div>


                      <div class="panel-footer">
                      </div>
              </div>
          </div>
      </div>
  </div>

  </div>


