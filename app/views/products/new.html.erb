<div class="top_header">
  <div class="container">
      <div class="row">
         <div class="col-lg-6 col-md-offset-6">

              <div class="panel panel-default">
                  <div class="panel-heading">
                    ユーザー情報</div>
                      <div class="panel-body">

                  <%= form_for @product  do |f| %>
                        <h2>出品情報</h2>
                          <div class="form-group">
                            <div class="col-lg-12">
                             <p>教科書画像</p>
                                <div class="form-group file">
                                  <%= f.file_field :image_url, class: "form-control floating-label", placeholder: "画像アップロード" %>
                                </div>
                              </div>


                      <div class="col-lg-12">
                        <p>値段</p>
                           <%= f.text_field :price, placeholder: "値段", class: "form-control" %>
                         </div>

                              <div class="col-lg-12">
                             <p>学部</p>
                            <%= f.select :price , [['法学部','法学部'],['商学部','商学部'],['経済学部','経済学部'],['文学部','文学部'],['総合政策学部','総合政策学部'],['理工学部','理工学部']] %>
                              </div>

                           <div class="col-lg-12">
                             <p>送料負担</p>
                            <%= f.select :price , [['販売者負担','販売者負担'],['買い手負担','買い手負担'],['大学で手渡し0円','大学で手渡し0円']] %>
                           </div>

                             <div class="col-lg-12">
                             <p>配送方法</p>

                            <%= f.select :price , [['大学で手渡し0円','大学で手渡し0円'],['商学部','商学部'],['経済学部','経済学部']] %>
                             </div>


                            <%= f.submit "出品する", class: "btn btn-primary withripple maipe-ji" %>
                          </div>


                       <% end %>


                      </div>


                      <div class="panel-footer">
                      </div>
              </div>
          </div>
      </div>
  </div>

</div>

