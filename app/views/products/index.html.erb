
<div class="center-block">
<div class="top_header_product">
  <div class="container">
      <div class="row">
         <div class=" .col-xs-6 .col-xs-offset-3">

              <div class="panel panel-default">

         <div class="col-md-12">
         
                    <% @products.each do |product|%>

         <div class="col-md-4">
                     <div class="row">
                    <!--   <div class="col-sm-6 col-md-4"> -->
                        <div class="thumbnail">
                         <%= image_tag  product.image_url %>
                         <script async src="//pagead2.googlesyndication.com/pagead/js/adsbygoogle.js"></script>
<!-- ブログ　コンテンツ -->
<ins class="adsbygoogle"
     style="display:block"
     data-ad-client="ca-pub-9875563038621390"
     data-ad-slot="3516785266"
     data-ad-format="auto"></ins>
<script>
(adsbygoogle = window.adsbygoogle || []).push({});
</script>
                          <div class="caption">
                          　 <h4>大学:<%= product.univercity %></h4>
                            <h4>教科書:<%= product.text_name %></h4>
                            <h4>教授:<%= product.professor %></h4>
                            <p>値段:<%= product.price %>円</p>
                            <p><%= link_to "編集する", edit_product_path(product.id) , class: "btn btn-primary", role: "button"%></p>
                            <p><%= link_to "削除する", product_path(product.id), method: :delete,  class: "btn btn-primary", role: "button", data: { confirm: "本当に削除してよろしいですか？",
                                                                                   "commit" => "削除する",
                                                                                   "cancel" => "やっぱりやめる",
                                                                                   }, title: "削除の確認"%></p>

                          </div>
                        </div>
                      </div>

                    </div>

                 <% end %>

                        </div>
                      <%= paginate(@products) %>
                   </div>

              </div>

          </div>
      </div>


</div>
